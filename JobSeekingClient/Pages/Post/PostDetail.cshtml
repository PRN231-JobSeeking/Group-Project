@page "/Post/{id:int}"
@using System.Net
@model JobSeekingClient.Pages.PostDetailModel
@{
    ViewData["Title"] = "Post Detail";
}
<h4>Post Detail</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Post.Title)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Post.Title)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Post.CategoryId)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Post.CategoryId)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Post.LocationId)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Post.LocationId)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Post.LevelId)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Post.LevelId)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Post.CreateDate)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Post.CreateDate, "MM/dd/yyyy")
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Post.Description)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Post.Description)
    </dd>
</dl>
<form method="post" , enctype="multipart/form-data">
    <div class="mb-3">
        <label for="formFile" class="form-label">CV File</label>
        <input class="form-control" type="file" name="cvFile" id="formFile">
    </div>
    <input class="btn btn-primary" asp-page-handler="Apply" type="submit" value="Apply">
</form>