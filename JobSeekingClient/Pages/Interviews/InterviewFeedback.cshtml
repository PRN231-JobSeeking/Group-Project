@page
@model JobSeekingClient.Pages.Interviews.InterviewFeedbackModel
@{
    ViewData["Title"] = "Details";
}

<h1>Interview Feedback</h1>

<div>
    <h4>Interview</h4>
    <hr />
    <div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                    <label asp-for="_interviews.Feedback" class="control-label"></label>
                    <input asp-for="_interviews.Feedback" class="form-control" />
                    <span asp-validation-for="_interviews.Feedback" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="_interviews.Point" class="control-label"></label>
                <input asp-for="_interviews.Point" class="form-control" />
                    <span asp-validation-for="_interviews.Point" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>