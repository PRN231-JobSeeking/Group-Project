@page
@model JobSeekingClient.Pages.Interviews.ChooseTimeModel
@{
    ViewData["Title"] = "ChooseTime";
}
<div class="row">
    <span class="text-danger">@ViewData["Message"]</span>
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ApplicationId" class="control-label">Choose Time for Application No. @Model.ApplicationId</label>
                <input type="hidden" asp-for="ApplicationId"/>
            </div>
            @*Date*@
            <div class="form-group">
                <label asp-for="Date" class="control-label">Interview meeting date: </label>
                <input type="date" asp-for="Date" min="@DateOnly.FromDateTime(DateTime.Today).AddDays(1)" value="@Model.Date" />
            </div>
            
            @*Slot*@
            <div class="form-group">
                <label asp-for="SlotId" class="control-label"></label>
                <select asp-for="SlotId" class="form-control" asp-items="ViewBag.SlotId"></select>
            </div>
            <button>Confirm</button>
        </form>
    </div>
</div>
