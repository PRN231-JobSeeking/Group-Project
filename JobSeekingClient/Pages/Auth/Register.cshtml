@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model JobSeekingClient.Pages.Auth.RegisterModel


@{
    ViewData["Title"] = "Register";
}

<h1>Sign up</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegisterUser.Email" class="control-label"></label>
                <input asp-for="RegisterUser.Email" class="form-control" />
                <span asp-validation-for="RegisterUser.Email" class="text-danger"></span>
                <span class="text-danger">@ViewBag.messageemail</span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterUser.Password" class="control-label"></label>
                <input type="password" asp-for="RegisterUser.Password" class="form-control" />
                <span asp-validation-for="RegisterUser.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterUser.ConfirmPassword" class="control-label"></label>
                <input type="password" asp-for="RegisterUser.ConfirmPassword" class="form-control" />
                <span asp-validation-for="RegisterUser.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterUser.FirstName" class="control-label"></label>
                <input  asp-for="RegisterUser.FirstName" class="form-control" />
                <span asp-validation-for="RegisterUser.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterUser.LastName" class="control-label"></label>
                <input asp-for="RegisterUser.LastName" class="form-control" />
                <span asp-validation-for="RegisterUser.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterUser.Address" class="control-label"></label>
                <input asp-for="RegisterUser.Address" class="form-control" />
                <span asp-validation-for="RegisterUser.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterUser.Phone" class="control-label"></label>
                <input asp-for="RegisterUser.Phone" class="form-control" />
                <span asp-validation-for="RegisterUser.Phone" class="text-danger"></span>
                <span class="text-danger">@ViewBag.messagephone</span>
            </div>
            <div class="form-group">
                Skills:
                <br /><br/>
                <select name="SkillIds" asp-items="Model.Skills" multiple="multiple" class="listbox"></select>
                <br /><br/>               
            </div>           
            <div class="form-group">
                <input type="submit" value="Sign up" class="btn btn-primary" />
            </div>
        </form>
        
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href=" https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css" />
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js"></script>
    <link href=" https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/0.9.13/css/bootstrap-multiselect.css" rel="stylesheet" type="text/css" />
    <script src=" https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/0.9.13/js/bootstrap-multiselect.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $('.listbox').multiselect({
                includeSelectAllOption: true
            });
        });
    </script>
}
