@page
@model JobSeekingClient.Pages.Applications.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<h1>Details</h1>
<div>
    <h4>Application</h4>
    <hr />
    <dl class="row">
        @{
            if (@ViewBag.message1 != null)
            {
                <text>
                    <span class="text-danger">@ViewBag.message1</span>
                    <a asp-page="./HrReview" asp-route-id="@Model.Application?.Id">Schedule interview now.</a>
                </text>
            }
        }
        @{
            if (@ViewBag.message2 != null)
            {
                <text>
                    <span class="text-danger">@ViewBag.message2</span>
                    <a asp-page="./HrReview" asp-route-id="@Model.Application?.Id">Review now.</a>
                </text>
            }
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Application.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Application.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Application.PostId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Application.PostId)
        </dd>
        <dt class="col-sm-2">
            Applicant name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Applicant.FirstName) @Html.DisplayFor(model => model.Applicant.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Applicant.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Applicant.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Application.CV)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Application.CV)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Application.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Application.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Application.IsDeleted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Application.IsDeleted)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./HrReview" asp-route-id="@Model.Application?.Id">Review</a> |
    <a asp-page="./Index">Back to List</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Interview[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Interview[0].Feedback)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Interview[0].Point)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Interview[0].SlotId)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Interview)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Feedback)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Point)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SlotId)
                </td>
            </tr>
        }
    </tbody>
</table>
